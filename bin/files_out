#!/bin/bash

# Check if a component name was provided
if [ $# -eq 0 ]; then
  echo "Please provide a component name."
  echo "Usage: $0 <component_name>"
  exit 1
fi

# Set the component name from the first argument
COMPONENT_NAME=$1

# Set the base path for components
BASE_PATH="app/components/rbui/$COMPONENT_NAME"

# Check if the component directory exists
if [ ! -d "$BASE_PATH" ]; then
  echo "Component '$COMPONENT_NAME' not found in app/components/rbui/"
  exit 1
fi

# Find all .rb and .js files in the component directory
find "$BASE_PATH" \( -name "*.rb" -o -name "*.js" \) | while read -r file; do
  # Print the file path as a comment
  echo "# File: $file"

  # Print the contents of the file
  cat "$file"

  # Print a separator
  echo
  echo "================================================================================"
  echo
done
